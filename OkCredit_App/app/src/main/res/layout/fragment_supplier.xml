<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragments.TabFragments.SupllierFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/supplierRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnAddSupplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:text="Add Supplier"
        android:textSize="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:drawableStart="@drawable/ic_baseline_person_add_24"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/next_rectaangle_green"
        />


</RelativeLayout>