<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_grey1_rec"
    android:orientation="vertical"
    tools:context=".HomeFragment.DrawerFragment.AccountFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/white_rec">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNetCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/arrow_forward_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableStart="@drawable/ic_baseline_menu_book_24"
                android:drawablePadding="5dp"
                android:text="Net Balance"/>

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvNetCustomer"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Customer Khata"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCustomer"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/person_outline"
                android:layout_marginTop="7dp"
                android:text="6 Customer"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cdSupplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/white_rec">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNetSupplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="5dp"
                android:drawableEnd="@drawable/arrow_forward_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableStart="@drawable/delivery_dining_24"
                android:drawablePadding="5dp"
                android:text="Net Balance"/>

            <TextView
                android:id="@+id/tvSupplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvNetSupplier"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Supplier Khata"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvSupplier"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/person_outline"
                android:layout_marginTop="7dp"
                android:text="11 Customer"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
