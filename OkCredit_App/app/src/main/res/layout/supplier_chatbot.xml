<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_margin="4dp"
        android:id="@+id/ll_3"
        android:backgroundTint="#FF7043"
        android:padding="14dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/send_round_box"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_time3"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/ll_4"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="#4CAF50"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_bot_message2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="This is a sample message that will appear"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_time4"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>